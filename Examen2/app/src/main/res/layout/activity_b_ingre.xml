<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_b_fauna"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BFauna">

  <ListView
      android:id="@+id/lv_ingre"
      android:layout_width="238dp"
      android:layout_height="391dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_anadir_ingre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="64dp"
      android:text="Agregar Ingrediente"
      app:layout_constraintEnd_toEndOf="@+id/lv_ingre"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="@+id/lv_ingre"
      app:layout_constraintTop_toBottomOf="@+id/lv_ingre" />

  <Button
      android:id="@+id/buttonToRec"
      android:layout_width="214dp"
      android:layout_height="86dp"
      android:layout_marginBottom="28dp"
      android:text="Button"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/lv_ingre"
      app:layout_constraintEnd_toEndOf="@+id/lv_ingre"
      app:layout_constraintHorizontal_bias="0.555"
      app:layout_constraintStart_toStartOf="@+id/lv_ingre" />

</androidx.constraintlayout.widget.ConstraintLayout>